<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="root" prefHeight="800.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.CompteClient">

    <!-- Barre latérale -->
    <left>
        <VBox alignment="TOP_CENTER" prefHeight="800.0" prefWidth="180.0" spacing="85" style="-fx-background-color: #ffffff;" VBox.vgrow="ALWAYS">
            <StackPane>
                <VBox.margin>
                    <Insets top="85" />
                </VBox.margin>
                <Button onAction="#goToAccueil" style="-fx-background-color: transparent; -fx-cursor: hand;">
                    <graphic>
                        <ImageView fitHeight="64.0" fitWidth="64.0">
                            <image>
                                <Image url="@../Images/maison.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
            </StackPane>

            <ImageView fitHeight="64.0" fitWidth="64.0">
                <image><Image url="@../Images/carte-de-credit.png" /></image>
            </ImageView>
            <ImageView fitHeight="64.0" fitWidth="64.0">
                <image><Image url="@../Images/trophee-etoile.png" /></image>
            </ImageView>
            <StackPane maxHeight="110.0" maxWidth="120.0" prefHeight="110.0" prefWidth="120.0" style="-fx-background-color: #178088; -fx-background-radius: 15;">
                <ImageView fitHeight="64.0" fitWidth="64.0">
                    <image><Image url="@../Images/compte.png" /></image>
                </ImageView>
            </StackPane>
        </VBox>
    </left>

    <!-- Contenu principal -->
    <center>
        <VBox alignment="TOP_CENTER" spacing="20" style="-fx-background-color: #f0f0f0;">
            <Label text="Dashboard" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
            <VBox alignment="CENTER" spacing="20" prefWidth="1000" style="-fx-background-color: linear-gradient(to bottom right, #178088, #2ea1a8); -fx-background-radius: 20; -fx-padding: 20;">
                <HBox spacing="20" alignment="TOP_CENTER">

                    <!-- Section Information -->
                    <VBox spacing="10" alignment="TOP_CENTER" style="-fx-background-color: #8af58a; -fx-background-radius: 20; -fx-padding: 15;" prefWidth="250">
                        <HBox alignment="CENTER" spacing="10">
                            <ImageView fitHeight="20" fitWidth="20">
                                <image><Image url="@../Images/info.png" /></image>
                            </ImageView>
                            <Label text="Information" style="-fx-font-weight: bold;" />
                            <Button style="-fx-background-color: transparent;">
                                <ImageView fitHeight="16" fitWidth="16">
                                    <image><Image url="@../Images/rotate-right.png" /></image>
                                </ImageView>
                            </Button>
                        </HBox>
                        <VBox spacing="5">
                            <Button text="Nom et Prénom" />
                            <Button text="Adresse ligne 1" />
                            <Button text="Ville" />
                            <Button text="Code Postal" />
                            <Button text="Pays" />
                            <Button text="Numéro de Téléphone" />
                            <Button text="Carte Vitale" />
                            <Button text="Mot de passe" />
                        </VBox>
                    </VBox>

                    <!-- Section Rendez-vous -->
                    <VBox spacing="10" alignment="TOP_CENTER" style="-fx-background-color: #90ee90; -fx-border-color: blue; -fx-border-width: 2; -fx-background-radius: 20; -fx-padding: 15;" prefWidth="250">
                        <HBox alignment="CENTER" spacing="10">
                            <ImageView fitHeight="20" fitWidth="20">
                                <image><Image url="@../Images/clock-three.png" /></image>
                            </ImageView>
                            <Label text="Rendez-vous" style="-fx-font-weight: bold;" />
                        </HBox>
                        <Label text="Rendez-vous Actuel" />
                    </VBox>

                    <!-- Section Historique -->
                    <VBox spacing="10" alignment="TOP_CENTER" style="-fx-background-color: #8af58a; -fx-background-radius: 20; -fx-padding: 15;" prefWidth="250">
                        <HBox alignment="CENTER" spacing="10">
                            <ImageView fitHeight="20" fitWidth="20">
                                <image><Image url="@../Images/time-past.png" /></image>
                            </ImageView>
                            <Label text="Historique" style="-fx-font-weight: bold;" />
                        </HBox>
                        <Label text="Historique des rendez-vous" />
                    </VBox>
                </HBox>

                <!-- Section Facture / Paiement -->
                <HBox spacing="10" alignment="CENTER" style="-fx-background-color: #90ee90; -fx-background-radius: 20; -fx-padding: 20;" prefWidth="900">
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <ImageView fitHeight="24" fitWidth="24">
                            <image><Image url="@../Images/fichier-facture-dollar.png" /></image>
                        </ImageView>
                        <Label text="Facture" />
                    </HBox>
                    <Region HBox.hgrow="ALWAYS" />
                    <Label text="Paiement" />
                </HBox>
            </VBox>
        </VBox>
    </center>

    <!-- Bouton logout -->
    <top>
        <HBox alignment="TOP_RIGHT" spacing="10" padding="10">
            <Button style="-fx-background-color: transparent;">
                <ImageView fitHeight="32.0" fitWidth="32.0">
                    <image><Image url="@../Images/leave.png" /></image>
                </ImageView>
            </Button>
        </HBox>
    </top>

</BorderPane>
