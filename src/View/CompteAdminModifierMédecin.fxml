<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>

<BorderPane fx:id="root" prefHeight="800.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.CompteAdminModifierMedecin">

    <!-- Barre latérale -->
    <left>
        <VBox alignment="TOP_CENTER" prefHeight="800.0" prefWidth="180.0" spacing="85" style="-fx-background-color: #ffffff;" VBox.vgrow="ALWAYS">
            <StackPane>
                <VBox.margin>
                    <Insets top="85" />
                </VBox.margin>
                <Button onAction="#goToAccueil" style="-fx-background-color: transparent; -fx-cursor: hand;">
                    <graphic>
                        <ImageView fitHeight="64.0" fitWidth="64.0">
                            <image>
                                <Image url="@../Images/maison.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
            </StackPane>
            <Button onAction="#goToDashboard" style="-fx-background-color: transparent; -fx-padding: 0; -fx-cursor: hand;">
                <graphic>
                    <ImageView fitHeight="64.0" fitWidth="64.0">
                        <image><Image url="@../Images/moniteur-de-tableau-de-bord.png" /></image>
                    </ImageView>
                </graphic>
            </Button>
            <Button onAction="#goToTopMedecinAdmin" style="-fx-background-color: transparent; -fx-padding: 0; -fx-cursor: hand;">
                <graphic>
                    <ImageView fitHeight="64.0" fitWidth="64.0">
                        <image><Image url="@../Images/trophee-etoile.png" /></image>
                    </ImageView>
                </graphic>
            </Button>
            <StackPane maxHeight="110.0" maxWidth="120.0" prefHeight="110.0" prefWidth="120.0" style="-fx-background-color: #ff6060; -fx-background-radius: 15;">
                <ImageView fitHeight="64.0" fitWidth="64.0">
                    <image><Image url="@../Images/compte.png" /></image>
                </ImageView>
            </StackPane>
        </VBox>
    </left>

    <!-- Contenu principal -->
    <center>
        <VBox alignment="TOP_CENTER" spacing="20" style="-fx-background-color: #f0f0f0;">
            <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Dashboard" />
            <VBox alignment="CENTER" maxHeight="650.0" maxWidth="800.0" prefHeight="700.0" prefWidth="800.0" spacing="20" style="-fx-background-color: #ff6060; -fx-background-radius: 20; -fx-padding: 20;">
                <HBox alignment="TOP_CENTER" spacing="20">

                    <!-- Section Information -->
                    <VBox alignment="TOP_CENTER" prefHeight="500.0" prefWidth="500.0" spacing="10" style="-fx-background-color: #ff7777; -fx-background-radius: 20; -fx-padding: 15;">
                        <HBox alignment="CENTER_LEFT" spacing="10">
                            <ImageView fitHeight="24" fitWidth="24">
                                <image><Image url="@../Images/info.png" /></image>
                            </ImageView>
                            <Label style="-fx-font-weight: bold;" text="Information" />
                        </HBox>
                        <VBox alignment="TOP_CENTER" maxWidth="200.0" prefWidth="200.0" spacing="30.0">
                            <TextField fx:id="nomField" promptText="Nom" />
                            <TextField fx:id="prenomField" promptText="Prénom" />
                            <TextField fx:id="emailField" promptText="Email" />
                            <TextField fx:id="specialiteField" promptText="Spécialisation" />
                            <TextField fx:id="qualificationField" promptText="Qualification" />

                        </VBox>

                    </VBox>

                    <!-- Calendrier -->
                    <VBox alignment="CENTER" spacing="15">
                        <GridPane alignment="CENTER" hgap="60.0" maxHeight="300.0" minWidth="570.0" prefHeight="300.0" prefWidth="570.0" vgap="30">
                            <columnConstraints>
                                <ColumnConstraints halignment="CENTER" percentWidth="10" />
                                <ColumnConstraints halignment="CENTER" percentWidth="10" />
                                <ColumnConstraints halignment="CENTER" percentWidth="10" />
                                <ColumnConstraints halignment="CENTER" percentWidth="10" />
                                <ColumnConstraints halignment="CENTER" percentWidth="10" />
                                <ColumnConstraints halignment="CENTER" percentWidth="10" />
                                <ColumnConstraints halignment="CENTER" percentWidth="10" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints valignment="CENTER" />
                                <RowConstraints valignment="CENTER" />
                            </rowConstraints>

                            <!-- Ligne 1 : jours + dates -->
                            <VBox alignment="CENTER" minWidth="73.0" prefHeight="60" prefWidth="73.0" style="-fx-background-color: #c6dce0; -fx-background-radius: 10; -fx-padding: 5 10;" GridPane.columnIndex="0" GridPane.rowIndex="0">
                                <Label text="Lundi" />
                                <Label text="Date" />
                            </VBox>
                            <VBox alignment="CENTER" minWidth="73.0" prefHeight="60" prefWidth="73.0" style="-fx-background-color: #c6dce0; -fx-background-radius: 10; -fx-padding: 5 10;" GridPane.columnIndex="1" GridPane.rowIndex="0">
                                <Label text="Mardi" />
                                <Label text="Date" />
                            </VBox>
                            <VBox alignment="CENTER" minWidth="73.0" prefHeight="60" prefWidth="73.0" style="-fx-background-color: #c6dce0; -fx-background-radius: 10; -fx-padding: 5 10;" GridPane.columnIndex="2" GridPane.rowIndex="0">
                                <Label text="Mercredi" />
                                <Label text="Date" />
                            </VBox>
                            <VBox alignment="CENTER" minWidth="73.0" prefHeight="60" prefWidth="73.0" style="-fx-background-color: #005d74; -fx-background-radius: 10; -fx-padding: 5 10;" GridPane.columnIndex="3" GridPane.rowIndex="0">
                                <Label style="-fx-text-fill: white;" text="Jeudi" />
                                <Label style="-fx-text-fill: white;" text="Date" />
                            </VBox>
                            <VBox alignment="CENTER" minWidth="73.0" prefHeight="60" prefWidth="73.0" style="-fx-background-color: #c6dce0; -fx-background-radius: 10; -fx-padding: 5 10;" GridPane.columnIndex="4" GridPane.rowIndex="0">
                                <Label text="Vendredi" />
                                <Label text="Date" />
                            </VBox>
                            <VBox alignment="CENTER" minWidth="73.0" prefHeight="60" prefWidth="73.0" style="-fx-background-color: #c6dce0; -fx-background-radius: 10; -fx-padding: 5 10;" GridPane.columnIndex="5" GridPane.rowIndex="0">
                                <Label text="Samedi" />
                                <Label text="Date" />
                            </VBox>
                            <VBox alignment="CENTER" minWidth="73.0" prefHeight="60" prefWidth="73.0" style="-fx-background-color: #e94c4c; -fx-background-radius: 10; -fx-padding: 5 10;" GridPane.columnIndex="6" GridPane.rowIndex="0">
                                <Label style="-fx-text-fill: white;" text="Dimanche" />
                                <Label style="-fx-text-fill: white;" text="Date" />
                            </VBox>

                            <!-- Ligne 2 : horaires -->
                            <Button minWidth="60.0" prefHeight="50" prefWidth="60.0" style="-fx-background-color: #c6dce0;" text="09H00" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                            <Button minWidth="60.0" prefHeight="50" prefWidth="60.0" style="-fx-background-color: #e94c4c; -fx-text-fill: white;" text="10H00" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                            <Button minWidth="60.0" prefHeight="50" prefWidth="60.0" style="-fx-background-color: #005d74; -fx-text-fill: white;" text="11H00" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                            <Button minWidth="60.0" prefHeight="50" prefWidth="60.0" style="-fx-background-color: #d3e2e2;" text="12H00" GridPane.columnIndex="3" GridPane.rowIndex="1" />
                            <Button minWidth="60.0" prefHeight="50" prefWidth="60.0" style="-fx-background-color: #e94c4c; -fx-text-fill: white;" text="14H00" GridPane.columnIndex="4" GridPane.rowIndex="1" />
                            <Button minWidth="60.0" prefHeight="50" prefWidth="60.0" style="-fx-background-color: #c6dce0;" text="15H00" GridPane.columnIndex="5" GridPane.rowIndex="1" />
                            <Button minWidth="60.0" prefHeight="50" prefWidth="60.0" style="-fx-background-color: #c6dce0;" text="16H00" GridPane.columnIndex="6" GridPane.rowIndex="1" />
                        </GridPane>

                        <VBox alignment="CENTER" spacing="10">
                            <ImageView fx:id="imageMedecinView" fitHeight="150.0" fitWidth="150.0" preserveRatio="true" style="-fx-border-color: white; -fx-border-width: 2;" />
                            <Button text="Choisir une image" onAction="#chargerImageMedecin"
                                    style="-fx-background-radius: 20; -fx-background-color: #ffffff; -fx-text-fill: #ff6060;" />
                            <Label fx:id="descriptionMedecinLabel" text="Aucune description pour le moment."
                                   style="-fx-font-size: 14px; -fx-text-fill: white; -fx-padding: 0 20 0 20;" wrapText="true" maxWidth="400.0" />
                        </VBox>
                    </VBox>

                    <!-- Ajout image + description -->
                </HBox>

                <!-- Bouton Modifier -->
                <HBox alignment="CENTER" spacing="40">
                    <Button onAction="#modifierMedecin" prefWidth="200.0" prefHeight="40.0" style="-fx-background-radius: 30; -fx-background-color: #ff7777; -fx-text-fill: black;" text="Modifier" />
                </HBox>
            </VBox>
        </VBox>
    </center>

    <!-- Bouton logout -->
    <top>
        <HBox alignment="TOP_RIGHT" spacing="10" style="-fx-background-color: #FFFFFF">
            <Button style="-fx-background-color: transparent;">
                <graphic>
                    <StackPane>
                        <Circle fill="#ffc7c7" radius="24" />
                        <ImageView fitHeight="32.0" fitWidth="32.0">
                            <image><Image url="@../Images/leave.png" /></image>
                        </ImageView>
                    </StackPane>
                </graphic>
            </Button>
        </HBox>
    </top>

</BorderPane>
